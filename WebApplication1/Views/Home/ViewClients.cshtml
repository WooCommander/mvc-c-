
@using ConsoleAppStart.model;
@model  List<Client>

@{
    ViewBag.Title = "ViewClients";
}

<h2>ViewClients</h2>

<p>
    @Html.ActionLink("Create New", "Client")
</p>
<table class="table">
    <tr>
        <th>
           FIO
        </th>
        <th>
           NameCompany
        </th>
        <th>
          Adres
        </th>
        <th>
           Tel
        </th>
        <th>
           City
        </th>
        <th>
           Index
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FIO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameCompany)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Index)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
